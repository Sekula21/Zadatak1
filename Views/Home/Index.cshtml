@model Zadatak1.ViewModels.ProductFilterViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by name" />
    <input type="text" name="typeOfHoney" value="@Model.TypeOfHoney" placeholder="Type of honey" />
    <input type="number" step="0.01" name="minPrice" value="@Model.MinPrice" placeholder="Min price" />
    <input type="number" step="0.01" name="maxPrice" value="@Model.MaxPrice" placeholder="Max price" />
    <button type="submit">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">
                    @Html.DisplayNameFor(m => m.Products.First().Name)
                </a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["TypeSortParam"]">
                    @Html.DisplayNameFor(m => m.Products.First().TypeOfHoney)
                </a></th>
            <th>@Html.DisplayNameFor(m => m.Products.First().Producer)</th>
            <th>@Html.DisplayNameFor(m => m.Products.First().Adress)</th>
            <th>@Html.DisplayNameFor(m => m.Products.First().Color)</th>
            <th>@Html.DisplayNameFor(m => m.Products.First().Description)</th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParam"]">
                    @Html.DisplayNameFor(m => m.Products.First().PricePerJar)
            </a></th>
            <th>@Html.DisplayNameFor(m => m.Products.First().TotalAmount)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.TypeOfHoney</td>
                <td>@product.Producer</td>
                <td>@product.Adress</td>
                <td>@product.Color</td>
                <td>@product.Description</td>
                <td>@product.PricePerJar</td>
                <td>@product.TotalAmount</td>
            </tr>
        }
    </tbody>
</table>
